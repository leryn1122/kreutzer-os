root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
indent_style = space

[Makefile]
indent_size = 4
indent_style = tab

[*.rs]
indent_size = 2
indent_style = space

[*.asm]
indent_size = 4
indent_style = tab

[*.py]
indent_size = 4
indent_style = tab

[*.sh]
indent_size = 2
indent_style = space

[*.toml]
ij_toml_continuation_indent_size = 2
ij_toml_indent_size = 2
ij_toml_keep_indents_on_empty_lines = true
ij_toml_tab_width = 2
